{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",     
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/index.mjs"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "/vite.svg",
      "dest": "frontend/dist/vite.svg"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "...",
    "BACKEND_PORT": "...",
    "NODE_ENV": "...",
    "JWT_SECRET": "...",
    "MAILTRAP_TOKEN": "...",
    "CLOUD_NAME": "...",
    "CLOUD_API_KEY": "...",
    "CLOUD_SECRET_KEY": "...",
    "SMTP_HOST": "...",
    "SMTP_PORT": "...",
    "SMTP_SERVICE": "...",
    "SMTP_MAIL": "...",
    "SMTP_PASSWORD": "...",
    "CORS_ORIGIN": "..."
  }
}